@model List<GarbageCollectionApp.Models.GarbageCollectionDTO>
<style>
    table {
        border-collapse: collapse;
        width: 100%;
        margin-top: 20px;
    }

    th, td {
        padding: 10px 15px;
        text-align: left;
        border-bottom: 1px solid #ddd;
    }

</style>

<h2>Garbage Collection Records</h2>

<form method="get">
    <label for="citizen">Select Citizen:</label>
    <select id="citizen" name="citizenId" asp-items="ViewBag.Citizens">
        <option value="">-- Select a Citizen --</option>
    </select>
    <button type="submit">Search</button>
</form>

@if (Model.Any())
{
    <table>
        <tr>
            <th>Bin ID</th>
            <th>Collection Time</th>
            <th>Address</th>
        </tr>
        @foreach (var c in Model)
        {
            <tr>
                <td>@c.IdGarbageBin</td>
                <td>@c.CollectionTime</td>
                <td>@c.Address</td>
            </tr>
        }
    </table>
}
else
{
    <p>No collection records found for the selected citizen.</p>
}
