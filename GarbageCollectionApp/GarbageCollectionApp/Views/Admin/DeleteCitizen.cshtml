@model GarbageCollectionApp.Models.Citizen

<h2>Are you sure you want to delete this citizen?</h2>

<div>
    <p>First Name: @Model.FirstName</p>
    <p>Last Name: @Model.LastName</p>
    <p>Email: @Model.Email</p>
    <p>CNP: @Model.Cnp</p>
</div>

<form method="post">
    <input type="hidden" name="id" value="@Model.Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a href="@Url.Action("Citizens")" class="btn btn-secondary">Cancel</a>
</form>
